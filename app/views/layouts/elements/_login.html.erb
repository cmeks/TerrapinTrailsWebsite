<% if logged_in? %>
    <div class="well">
        <h4 class="text-center">Hi, <%= @user.first_name %> <%= @user.last_name %>!</h4>
        <p class="text-center">Welcome back.</p>
        <p class="text-center">
            <%= link_to "Profile", @user, class: 'small-padding btn btn-md btn-primary' %>
            <%= link_to "Logout", logout_path, method: "delete", class: 'small-padding btn btn-md btn-success' %> 
        </p>
    </div>
<% else %>
    <div class="well">
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.email_field :email, :placeholder => "email", class: 'form-control wide' %>
            
            <%= f.password_field :password, :placeholder => "password", class: 'form-control wide' %>

            <%= f.label :remember_me, class: "checkbox inline wide" do %>
                <%= f.check_box :remember_me %>
                <span>Keep me loggin in</span>
            <% end %>

            <%= f.submit "Log in", class: "btn btn-primary wide" %>
            
        <% end %>

        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        Forgot password? <%= link_to "remember", new_password_reset_path %>
    </div>
<% end %>