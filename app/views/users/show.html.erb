<div class="row header">
	<div class="col-md-8">
		<h1 style="text-shadow: 1px 1px 1px #ccc;"> <%= @user.name %> </h1>
	</div>
	<div class="col-md-4 push-down">
		<%= button_to "Edit your profile", edit_user_path(@user), :class => "btn btn-primary btn-md pull-right", :method => :get  %>
	</div>
</div>

<h3> General Information </h3>

<div class="row">
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Position:
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @position %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Dues Paid: 
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				N/A
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Waiver Signed: 
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				N/A
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Join Date:
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.created_at.strftime("%b %d %I:%M %p") %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Email Address:
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.email %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Emergency Contact Name: 
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.ec_name %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Emergency Contact Relation: 
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.ec_type %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Emergency Contact Email
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.ec_email %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Emergency Contact Phone Number:
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.ec_phone1 %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				Emergency Contact Alternate Phone Number:
			</div>
			<div class="col-lg-5 col-md-6 col-sm-6 col-xs-12">
				<%= @user.ec_phone2 %>
			</div>
		</div>

	</div>
</div>

<h3> Trips currently signed up for </h3>
<% if @current_trips.count > 0 %>
	<table class="table table-hover">
	    <thead>
	        <tr>
				<th>Name</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Trip Size</th>
			</tr>
		</thead>
		<tbody>
		   	<% @current_trips.each do |trip| %>
		   		<tr>
			    	<th> <%= link_to trip.name, trip %> </th>
			    	<th> <%= trip.start_date.strftime("%b %d %I:%M %p") %> </th>
			    	<th> <%= trip.end_date.strftime("%b %d %I:%M %p") %> </th>
			    	<th> 5 </th>
		    	</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<h5> None </h5>
<% end %>