<% provide(:title, 'Sign up') %>
<h1 class="center header">Sign up</h1>

<div class="row">
  	<div class="col-md-6 col-md-offset-3">
    	<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

      		<%= f.label :name %>
      		<%= f.text_field :name, class: 'form-control wide' %>

      		<%= f.label :email %>
      		<%= f.email_field :email, class: 'form-control wide' %>

      		<%= f.label :password %>
      		<%= f.password_field :password, class: 'form-control wide' %>

      		<%= f.label :password_confirmation, "Password confirmation" %>
      		<%= f.password_field :password_confirmation, class: 'form-control wide' %>

          <div>
            <%= f.hidden_field :role, :value => 1 %>
          </div>
          
          <div class="buttons">
        		<%= f.submit "Create my account", class: "btn btn-primary", data: { disable_with: "Please wait..." } %>
            <%= link_to "Cancel", '/home', {:class=>"btn btn-primary"} %>
          </div>
    	<% end %>
  	</div>
</div>
