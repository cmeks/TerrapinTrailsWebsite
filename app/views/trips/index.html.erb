<% provide(:title, 'All Trips') %>
<div class="header">
  <% if logged_in? %>
    <%= link_to "Create a new Trip!", 'trips/new', class: 'small-padding btn btn-info pull-right' %>
  <% end %>
  <h1>All trips</h1>
</div>

<ul class="nav nav-tabs pull-left">
  	<li class="active"><a href="#current" data-toggle="tab">Current Trips</a></li>
  	<li><a href="#outgoing" data-toggle="tab">Outgoing Trips</a></li>
  	<li><a href="#past" data-toggle="tab">Past Trips</a></li>
  	<li><a href="#tab_d" data-toggle="tab">Reserved</a></li>
</ul>
<div class="tab-content">
        <div class="tab-pane fade in active" id="current">
            <table class="table table-hover">
            	<thead>
    				<tr>
        				<th>Trip Name</th>
        				<th>Trip Leader</th>
        				<th>Start Date</th>
        				<th>End Date</th>
    				</tr>
   				 </thead>
   				 <tbody>
   				 	<% @trips.each do |trip| %>
   				 		<tr>
	    					<th> <%= link_to trip.name, trip %> </th>
	    					<th> <%= trip.user.name %> </th>
	    					<th> <%= trip.start_date.strftime("%b %d %I:%M %p") %> </th>
	    					<th> <%= trip.end_date.strftime("%b %d %I:%M %p") %> </th>
    					</tr>
  					<% end %>
  				</tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="outgoing">
            <table class="table table-hover">
            	<thead>
    				<tr>
        				<th>Trip Name</th>
        				<th>Trip Leader</th>
        				<th>Start Date</th>
        				<th>End Date</th>
    				</tr>
   				 </thead>
            </table>
        </div>
        <div class="tab-pane fade" id="past">
            <table class="table table-hover">
            	<thead>
    				<tr>
        				<th>Trip Name</th>
        				<th>Trip Leader</th>
        				<th>Start Date</th>
        				<th>End Date</th>
    				</tr>
   				 </thead>
            </table>
        </div>
        <div class="tab-pane fade" id="tab_d">
            <table class="table table-hover">
            	<thead>
    				<tr>
        				<th>Trip Name</th>
        				<th>Trip Leader</th>
        				<th>Start Date</th>
        				<th>End Date</th>
    				</tr>
   				 </thead>
            </table>
        </div>
</div><!-- tab content -->
